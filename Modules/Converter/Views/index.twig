<h2>Converter</h2>
<form method="post">
    <label for="currency">Choose a currency:</label>
    <select id="currency" name="currency">
        {% for currency in currencies %}
            <option value="{{ currency['charcode'] }}">{{ currency['name'] }}</option>
        {% endfor %}
    </select>

    <br>

    <label for="amount">Enter amount:</label>
    <input type="number" id="amount" name="amount" required>

    <br>

    <input type="checkbox" id="convertFromRuble" name="convertFromRuble" value="1">
    <label for="convertFromRuble">Convert from Ruble</label>

    <br>

    <button type="submit">Convert</button>
</form>

{% if rate is defined and convertedAmount is defined %}
    <p>Exchange Rate: {{ rate }}</p>
    <p>Converted Amount: {{ convertedAmount }}</p>
{% endif %}